  },
  "keywords": [
    "postgresql",
    "notify"
  ],
  "author": "numtel <ben@latenightsketches.com>",
  "license": "TBD",
  "devDependencies": {
    "6to5": "^3.4.0",
    "nodeunit": "~0.9.0"
  },
  "dependencies": {
    "pg"     : "^4.2.0",
    "lodash" : "^3.1.0"
  }
}
