{
  "name": "pg-notify-trigger",
  "version": "0.0.1",
  "description": "Trigger notify for specific row change events",
  "main": "lib/PgTriggers.js",
  "engines": {
    "node": "0.10"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node ./lib/index.js",
    "make": "6to5 src --out-dir lib",
